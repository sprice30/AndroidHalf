<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.samprice.applytojob.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:rowCount="16"
        android:columnCount="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Positions"
            android:id="@+id/button4"
            android:layout_column="0"
            android:onClick="onClickAllResultsP"
            android:layout_row="0" />

        <TextView
            android:layout_width="236dp"
            android:layout_height="42dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Job Position:"
            android:id="@+id/textView7"
            android:layout_column="0"
            android:layout_row="3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/textPosition"
            android:id="@+id/textView8"
            android:layout_column="0"
            android:layout_row="5" />

        <TextView
            android:layout_width="339dp"
            android:layout_height="42dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Job Description:"
            android:id="@+id/textView9"
            android:layout_column="0"
            android:layout_row="7" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Description"
            android:id="@+id/textView10"
            android:layout_column="0"
            android:layout_row="9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Location:"
            android:id="@+id/textView11"
            android:layout_column="0"
            android:layout_row="10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Unites States"
            android:id="@+id/textView12"
            android:layout_column="0"
            android:layout_row="11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Salary:"
            android:id="@+id/textView13"
            android:layout_column="0"
            android:layout_row="12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="$60,000"
            android:id="@+id/textView14"
            android:layout_column="0"
            android:layout_row="13" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:id="@+id/button5"
            android:onClick="onClickResume"
            android:layout_row="15"
            android:layout_column="0" />
    </GridLayout>

</RelativeLayout>