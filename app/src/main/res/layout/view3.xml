<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.samprice.applytojob.MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/button16"
        android:onClick="onClickBack"
        android:layout_row="31"
        android:layout_column="0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView41"
            android:layout_row="0"
            android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gridLayout"
        android:layout_marginTop="79dp"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5">

        <Button
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:text="Resume"
            android:id="@+id/button27"
            android:onClick="onClickViewResume"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:text="Other Documents"
            android:id="@+id/button28"
            android:onClick="onClickViewOther"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:text="Matched Tags"
            android:id="@+id/button29"
            android:onClick="onClickViewTags"
            android:layout_row="2"
            android:layout_column="1" />
    </GridLayout>

</RelativeLayout>