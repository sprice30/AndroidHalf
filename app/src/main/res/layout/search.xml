<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.samprice.applytojob.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="39"
        android:columnCount="7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        android:id="@+id/gridLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Job Seeker"
            android:id="@+id/textView31"
            android:textSize="40dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnSpan="6" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Search"
            android:ems="10"
            android:id="@+id/editPosition"
            android:layout_column="1"
            android:layout_marginTop="30dp"
            android:layout_row="26" />

        <Button
            android:layout_width="202dp"
            android:layout_height="74dp"
            android:text="Search by Position"
            android:id="@+id/button6"
            android:layout_column="1"
            android:layout_row="27"
            android:onClick="onClickByPosition"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Search"
            android:ems="10"
            android:id="@+id/editEmployer"
            android:layout_column="1"
            android:layout_row="29" />

        <Button
            android:layout_width="206dp"
            android:layout_height="74dp"
            android:text="Search by Employer"
            android:id="@+id/button7"
            android:layout_column="1"
            android:layout_row="30"
            android:onClick="onClickByEmployer"/>

     <!--   <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=" "
            android:textSize="50dp"
            android:id="@+id/textView6"
            android:layout_row="31"
  -->          android:layout_column="1" />

        <Button
            android:layout_width="206dp"
            android:layout_height="74dp"
            android:text="Search by Tags"
            android:id="@+id/button8"
            android:layout_column="1"
            android:layout_row="33"
            android:onClick="onClickByTags"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Search"
            android:ems="10"
            android:id="@+id/editTags"
            android:layout_column="1"
            android:layout_row="32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=" "
            android:textSize="50dp"
            android:id="@+id/textView5"
            android:layout_row="35"
            android:layout_column="1" />

    </GridLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/button15"
        android:onClick="onClickJobSeeker"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>